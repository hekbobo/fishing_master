<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fitsSystemWindows="true"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_surface_card"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/text_primary" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我的主页"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Notification Icon -->
                <FrameLayout
                    android:id="@+id/notificationIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_surface_card">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_popup_reminder"
                        app:tint="@color/text_primary" />
                </FrameLayout>

                <!-- Settings Icon -->
                <FrameLayout
                    android:id="@+id/settingsIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toStartOf="@id/notificationIcon"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_surface_card">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_preferences"
                        app:tint="@color/text_primary" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Avatar with Level Badge -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/avatarCard"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/surface_card">

                        <ImageView
                            android:id="@+id/avatarImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:src="@tools:sample/avatars" />
                    </androidx.cardview.widget.CardView>

                    <!-- Level Badge -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/avatarCard"
                        android:layout_alignBottom="@id/avatarCard"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_level_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lv.15"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </RelativeLayout>

                <!-- User Name -->
                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈船长"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Tagline -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_compass"
                        app:tint="@color/primary_blue"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/taglineText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专注路亚 | 12年钓龄"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Edit Profile Button -->
                <Button
                    android:id="@+id/editProfileButton"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:text="编辑资料"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_edit_profile_button"
                    android:elevation="0dp" />
            </LinearLayout>

            <!-- Statistics Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Total Catch Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_card"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            app:tint="@color/primary_blue"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总渔获"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/totalCatchText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,240"
                            android:textColor="@color/primary_blue"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+12本月"
                                android:textColor="@color/action_green"
                                android:textSize="11sp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginStart="4dp"
                                android:src="@android:drawable/arrow_up_float"
                                app:tint="@color/action_green" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Max Weight Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_card"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/primary_blue"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最大重量"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/maxWeightText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.4 kg"
                            android:textColor="@color/primary_blue"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023.09.15"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Fishing Trips Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_card"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_today"
                            app:tint="@color/primary_blue"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出钓"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/fishingTripsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85次"
                            android:textColor="@color/primary_blue"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="胜率88%"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Favorite Target Fish Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="最爱目标鱼"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewEncyclopediaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看图鉴 >"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Fish Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_card"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Left Content -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true">

                            <!-- SSR Badge and Fish Name -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_ssr_badge"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp"
                                    android:layout_marginEnd="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SSR"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="大口黑鲈"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <!-- Unlocked Info -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@android:drawable/checkbox_on_background"
                                    app:tint="@color/primary_blue"
                                    android:layout_marginEnd="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已解锁: 342条"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Fish Image (Right) -->
                        <ImageView
                            android:id="@+id/fishImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:background="@drawable/bg_surface_card"
                            tools:src="@tools:sample/backgrounds/scenic" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- More Services Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多服务"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- My Gear Box -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/gearBoxItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_card"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="我的装备箱"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_more"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Achievements -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/achievementsItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_card"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="@color/action_purple"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="成就徽章"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- Red Dot Indicator -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:background="@drawable/notification_indicator" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_menu_more"
                            app:tint="@color/text_secondary" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Privacy & Security -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/privacyItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surface_card"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_lock_lock"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="隐私与安全"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_more"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Footer Version -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fishing Master v2.4.0"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Custom Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Bottom Bar Background -->
        <View
            android:id="@+id/bottomBarBg"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/surface_card"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- FAB (Add Button) -->
        <FrameLayout
            android:id="@+id/centerFab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_add_button"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_input_add"
                app:tint="@color/white" />
        </FrameLayout>

        <!-- Icons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Map -->
            <LinearLayout
                android:id="@+id/navMap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:alpha="0.6">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地图"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Discover -->
            <LinearLayout
                android:id="@+id/navDiscover"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:alpha="0.6">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_compass"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Spacer for FAB -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Record -->
            <LinearLayout
                android:id="@+id/navRecord"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:alpha="0.6">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:alpha="1.0">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="10sp"
                    android:textColor="@color/primary_blue"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
