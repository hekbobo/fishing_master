<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_map_gradient">

    <!-- Mock Map Elements (Pins) -->
    <!-- Pin 1 -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:tint="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"/>
        
    <!-- Pin 2 -->
     <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:tint="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.55"/>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_search_bar"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="#A0A0A0" />

        <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="12dp"
             android:text="Find spots, lakes, rivers..."
             android:textColor="#A0A0A0"
             android:textSize="14sp"/>
             
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_btn_speak_now"
            app:tint="#A0A0A0" />

    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/searchContainer">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_search_bar"
                android:padding="10dp"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="#A0A0A0"
                android:layout_marginEnd="12dp"/>
                
            <!-- Selected Chip -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/selector_filter_chip"
                android:gravity="center"
                 android:paddingHorizontal="16dp"
                 android:layout_marginEnd="12dp">
                 
                 <View 
                     android:layout_width="8dp" 
                     android:layout_height="8dp" 
                     android:background="@drawable/notification_indicator"
                     android:backgroundTint="@color/white"
                     android:layout_marginEnd="8dp"/> 
                     
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Freshwater"
                     android:textColor="@color/white"
                     android:textStyle="bold"/>
                     
                 <ImageView
                     android:layout_width="16dp"
                     android:layout_height="16dp"
                     android:src="@android:drawable/ic_menu_close_clear_cancel"
                     app:tint="@color/white"
                     android:layout_marginStart="8dp"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/selector_filter_chip"
                android:gravity="center"
                 android:paddingHorizontal="16dp">
                 
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Species"
                     android:textColor="#A0A0A0"/>
                 
                 <ImageView
                     android:layout_width="12dp"
                     android:layout_height="12dp"
                     android:src="@android:drawable/arrow_down_float"
                     app:tint="#A0A0A0"
                     android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Floating Buttons (Right Side) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomSheet"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_map_button"
            android:src="@android:drawable/ic_menu_mapmode"
            android:padding="10dp"
            app:tint="@color/white"
            android:layout_marginBottom="12dp"/>
            
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_map_button"
            android:src="@android:drawable/ic_menu_mylocation"
            android:padding="10dp"
            app:tint="#03A9F4"
            android:layout_marginBottom="12dp"/>

         <LinearLayout
             android:layout_width="44dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@drawable/bg_map_button">
             
             <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_lock_lock"
                android:padding="12dp"
                app:tint="@color/white"/>
                
             <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#20FFFFFF"/>

             <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_input_add"
                android:padding="10dp"
                app:tint="@color/white"/>
                
             <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#20FFFFFF"/>
             
             <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/button_onoff_indicator_off"
                android:padding="16dp"
                app:tint="@color/white"/> <!-- Minus icon approximation -->
         </LinearLayout>
         
         <FrameLayout
             android:layout_width="56dp"
             android:layout_height="56dp"
             android:layout_marginTop="16dp"
             android:background="@drawable/bg_add_button"> <!-- Reuse FAB background -->
             <ImageView
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:layout_gravity="center"
                 android:src="@android:drawable/ic_input_add"
                 app:tint="@color/white"/>
         </FrameLayout>
    </LinearLayout>

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Drag Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#30FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtered Results"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 freshwater spots found"
                    android:textColor="#A0A0A0"
                    android:textSize="12sp"/>
            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full List â†’"
                android:textColor="#03A9F4"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spotsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_fishing_spot"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
